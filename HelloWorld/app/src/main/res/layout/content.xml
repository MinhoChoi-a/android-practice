<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/roll_em"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/headline_margin"
        android:layout_marginBottom="@dimen/headline_margin"
        android:textSize="@dimen/headline_text_size"/>

    <ImageView
            android:id="@+id/result_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/result_image2"
            app:srcCompat="@drawable/empty_dice"
            android:layout_marginTop="48dp"
            tools:src="@drawable/dice_1" />

        <ImageView
            android:id="@+id/result_image2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/result_image"
            app:layout_constraintStart_toEndOf="@id/result_image"
            app:layout_constraintEnd_toStartOf="@id/result_image3"
            app:srcCompat="@drawable/empty_dice"
            android:layout_marginTop="48dp"
            tools:src="@drawable/dice_2" />

    <ImageView
        android:id="@+id/result_image3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/result_image2"
        app:layout_constraintStart_toEndOf="@id/result_image2"
        app:layout_constraintEnd_toStartOf="parent"
        app:srcCompat="@drawable/empty_dice"
        android:layout_marginTop="48dp"
        tools:src="@drawable/dice_3" />

    <ImageView
        android:id="@+id/result_image4"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/result_image"
        app:layout_constraintEnd_toEndOf="@id/result_image2"
        app:layout_constraintTop_toBottomOf="@id/result_image"
        app:srcCompat="@drawable/empty_dice"
        android:layout_marginTop="48dp"
        tools:src="@drawable/dice_4" />



</androidx.constraintlayout.widget.ConstraintLayout>